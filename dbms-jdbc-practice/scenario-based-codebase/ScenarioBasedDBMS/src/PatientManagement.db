mysql> SELECT a.appointment_date, d.doctor_name, v.diagnosis
    -> FROM appointments a
    -> LEFT JOIN doctors d ON a.doctor_id = d.doctor_id
    -> LEFT JOIN visits v ON a.appointment_id = v.appointment_id
